#=============================================================================
# GOLDEN TMS - PRODUCTION ENVIRONMENT CONFIGURATION
#=============================================================================
# Copy this file to .env and configure all values for your production server.
# NEVER commit .env file to version control!
#=============================================================================

#-----------------------------------------------------------------------------
# APPLICATION SETTINGS
#-----------------------------------------------------------------------------
APP_NAME="Golden TMS"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Africa/Harare
APP_URL=https://your-domain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

#-----------------------------------------------------------------------------
# SECURITY SETTINGS
#-----------------------------------------------------------------------------
# Higher rounds = more secure but slower (12 is good for production)
BCRYPT_ROUNDS=12

#-----------------------------------------------------------------------------
# LOGGING
#-----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

#-----------------------------------------------------------------------------
# DATABASE CONFIGURATION
#-----------------------------------------------------------------------------
# For SQLite (simple deployment):
DB_CONNECTION=sqlite
# DB_DATABASE=/absolute/path/to/database.sqlite

# For MySQL (recommended for production):
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=golden_tms
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_secure_password

# For PostgreSQL:
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=golden_tms
# DB_USERNAME=your_db_user
# DB_PASSWORD=your_secure_password

#-----------------------------------------------------------------------------
# SESSION CONFIGURATION (Security-hardened for production)
#-----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

#-----------------------------------------------------------------------------
# CACHE & QUEUE
#-----------------------------------------------------------------------------
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database
# CACHE_PREFIX=golden_tms_

#-----------------------------------------------------------------------------
# REDIS (Optional - for better performance)
#-----------------------------------------------------------------------------
# REDIS_CLIENT=phpredis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

#-----------------------------------------------------------------------------
# EMAIL CONFIGURATION
#-----------------------------------------------------------------------------
# Using SMTP (recommended for production):
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-email@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

#-----------------------------------------------------------------------------
# TWILIO WHATSAPP CONFIGURATION
#-----------------------------------------------------------------------------
# Enable WhatsApp notifications (set to true when ready)
TWILIO_WHATSAPP_ENABLED=false

# Twilio Credentials (from https://console.twilio.com)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=+14155238886

# Webhook Security (IMPORTANT: Enable in production!)
TWILIO_VALIDATE_WEBHOOK_SIGNATURE=true

# Notification Triggers
TWILIO_NOTIFY_ON_CREATE=true
TWILIO_NOTIFY_ON_STATUS_CHANGE=true
TWILIO_NOTIFY_ON_ASSIGNMENT=true
TWILIO_NOTIFY_ON_RESOLVED=true
TWILIO_NOTIFY_ON_ESCALATED=true

# Twilio Content Templates (Optional)
TWILIO_TEMPLATE_TICKET_CREATED=
TWILIO_TEMPLATE_TICKET_UPDATED=
TWILIO_TEMPLATE_TICKET_RESOLVED=
TWILIO_TEMPLATE_TASK_ASSIGNED=
TWILIO_TEMPLATE_TASK_REMINDER=

# Logging & Sandbox Mode
TWILIO_LOGGING_ENABLED=true
TWILIO_SANDBOX_MODE=false

#-----------------------------------------------------------------------------
# AWS (If using S3 for file storage)
#-----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#-----------------------------------------------------------------------------
# VITE (Frontend Build)
#-----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"
